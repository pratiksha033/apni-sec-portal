generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  issues    Issue[]
}

enum IssueType {
  CLOUD_SECURITY
  REDTEAM_ASSESSMENT
  VAPT
}

model Issue {
  id          String     @id @default(uuid())
  title       String
  description String
  type        IssueType
  priority    String
  status      String     @default("Open")

  userId      String
  user        User       @relation(fields: [userId], references: [id])

  createdAt   DateTime   @default(now())
}
