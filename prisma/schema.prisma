datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
 // <-- prevents s0 error
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String

  issues    Issue[]   // ðŸ‘ˆ ADD THIS LINE

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Issue {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  title       String
  description String
  type        String
  priority    String
  status      String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
